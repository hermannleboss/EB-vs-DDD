# Entity-based E-commerce Frontend (Development)
FROM node:18-alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Entity-based E-commerce Frontend (Development)
FROM node:24-alpine

# Install pnpm
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json ./
COPY pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 4001

# Start in development mode
CMD ["pnpm", "dev", "--port", "4001", "--host", "0.0.0.0"]
